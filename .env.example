# 应用基础配置
APP_NAME=Megumi AI Servive
APP_VERSION=1.0.0
DEBUG=true

# API 服务配置
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# CORS 配置（生产环境必须设置具体域名）
开发环境: ALLOW_ORIGINS=*
# 生产环境: ALLOW_ORIGINS=http://10.0.0.5:3000
ALLOW_ORIGINS=*

# RuoYi 后端认证配置（生产环境必须设置）
RUOYI_API_KEY=your_secure_api_key_here

# OpenAI 配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# FastGPT 配置
FASTGPT_API_URL=https://your-fastgpt-url
FASTGPT_API_KEY=your_fastgpt_api_key

# DashScope (阿里云通义千问) 配置
DASHSCOPE_API_KEY=your_dashscope_api_key
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/api/v1
DASHSCOPE_OCR_MODEL=qwen-vl-ocr-latest
DASHSCOPE_CHAT_MODEL=qwen3-max

# DeepSeek API 配置
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_API_URL=https://api.deepseek.com
DEEPSEEK_SSL_VERIFY=true

# 博查搜索 API 配置
BOCHA_API_KEY=your_bocha_api_key

# 天眼查 API 配置
TIANYANCHA_API_TOKEN=your_tianyancha_token

# Gemini API 配置
GEMINI_API_URL=https://generativelanguage.googleapis.com
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-pro

# 超时配置
TIMEOUT=30
MAX_RETRIES=3
API_TIMEOUT=600

# 网页抓取配置
WEB_SCRAPE_TOP_K=8
WEB_SCRAPE_CONCURRENCY=8
WEB_SCRAPE_TIMEOUT=20
WEB_SCRAPE_MAX_TOTAL_CHARS=80000
WEB_SCRAPE_MAX_PER_DOC_CHARS=20000
WEB_SCRAPE_USER_AGENT=Mozilla/5.0 (MegumiBot/1.0; +https://example.com/bot)
