# 应用基础配置
APP_NAME=RuoYi AI Service
APP_VERSION=1.0.0
DEBUG=False

# API 服务配置
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# OpenAI 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=
OPENAI_MODEL=gpt-4

# FastGPT 配置
FASTGPT_API_URL=https://fastgpt.example.com
FASTGPT_API_KEY=your_fastgpt_api_key_here

# 绘图服务配置
DRAWING_API_KEY=your_drawing_api_key_here
DRAWING_API_URL=https://api.openai.com/v1/images/generations

# OCR 服务配置
OCR_API_KEY=your_ocr_api_key_here
OCR_SECRET_KEY=your_ocr_secret_key_here
OCR_API_URL=https://ocr.example.com/api

# RuoYi 后端认证配置
RUOYI_API_KEY=your_ruoyi_api_key_here

# 其他配置
TIMEOUT=30
MAX_RETRIES=3

